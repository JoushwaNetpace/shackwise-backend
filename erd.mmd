        int id PK
        number noOfBeds
        number noOfCarParking
        number noOfBathrooms
        number area
        string overview
        string address
        array coordinates
        USER[] ratedBy
        USER createdBy FK
        RATING[] ratings
        date createdDate
        date updatedDate
    }

