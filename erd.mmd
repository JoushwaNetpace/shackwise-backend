    NOTIFICATIONS {
        int id PK
        USER userId
        ENUM type "SHARE_REQUEST, COMPARE_REQUEST, INVITE_REQUEST, CONNECT_REQUEST"
        ENUM sharedWith "PARTNER, AGENT"
        boolean isViewed
        boolean isOpened
        CONNECTION_REQUEST requestId
        date createdDate
        date updatedDate
    }

    CONNECTION_REQUEST {
        int id PK
        USER sentBy
